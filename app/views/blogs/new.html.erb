<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>new blog</title>
  </head>
  <body>
    <h4>New blog</h4>

    <%= form_for :blog, url: blogs_path do |f| %>
    <p>
      <%= f.label :title  %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body  %>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    <% end %>

  </body>
</html>
